<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProvidingBusDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="Provide Bus Details"
                android:textColor="#000000"
                android:textSize="16pt"
                android:textStyle="bold"/>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bus Name"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="#000000"
                    android:textSize="8pt"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <!-- Email Input -->
                <EditText
                    android:id="@+id/busName"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="3dp"
                    android:hint="*CTB Express"
                    android:background="@drawable/edittext_backgroud"
                    android:inputType="textEmailAddress"
                    android:padding="12dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Licence Number"
                    android:textColor="#000000"
                    android:textSize="8pt"
                    android:fontFamily="@font/roboto_regular"/>

                <!-- Email Input -->
                <EditText
                    android:id="@+id/licenceNumber"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="3dp"
                    android:hint="*ABC-1234"
                    android:background="@drawable/edittext_backgroud"
                    android:inputType="textEmailAddress"
                    android:padding="12dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bus Fee"
                    android:textColor="#000000"
                    android:textSize="8pt"
                    android:fontFamily="@font/roboto_regular"/>

                <!-- Email Input -->
                <EditText
                    android:id="@+id/busFee"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="3dp"
                    android:hint="*Rs.xxxxxxx"
                    android:background="@drawable/edittext_backgroud"
                    android:inputType="textEmailAddress"
                    android:padding="12dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No. of seats"
                    android:textColor="#000000"
                    android:textSize="8pt"
                    android:fontFamily="@font/roboto_regular"/>

                <!-- Email Input -->
                <EditText
                    android:id="@+id/noofseats"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/edittext_backgroud"
                    android:clickable="false"
                    android:hint="*24"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:inputType="textEmailAddress"
                    android:padding="12dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Route"
                    android:textColor="#000000"
                    android:textSize="8pt"
                    android:fontFamily="@font/roboto_regular"/>

                <!-- Email Input -->
                <EditText
                    android:id="@+id/route"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="3dp"
                    android:hint="*A05"
                    android:background="@drawable/edittext_backgroud"
                    android:inputType="textEmailAddress"
                    android:padding="12dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Starting Point"
                    android:textColor="#000000"
                    android:textSize="8pt"
                    android:fontFamily="@font/roboto_regular"/>

                <!-- Email Input -->
                <EditText
                    android:id="@+id/startingPoint"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="3dp"
                    android:hint="*Colombo 07"
                    android:background="@drawable/edittext_backgroud"
                    android:inputType="textEmailAddress"
                    android:padding="12dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ending Point"
                    android:textColor="#000000"
                    android:textSize="8pt"
                    android:fontFamily="@font/roboto_regular"/>

                <!-- Email Input -->
                <EditText
                    android:id="@+id/endingPoint"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="3dp"
                    android:hint="*Piliyandala"
                    android:background="@drawable/edittext_backgroud"
                    android:inputType="textEmailAddress"
                    android:padding="12dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

            <Button
                android:id="@+id/registerBus"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Register Now"
                android:layout_marginTop="40dp"
                android:textSize="8pt"
                android:fontFamily="@font/roboto_medium"
                android:background="@drawable/button_background"
                android:onClick="onClickRegisterBus"/>



        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>